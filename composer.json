{
    "name": "sonatra/block",
    "type": "library",
    "description": "Provides tools for defining UI blocks, rendering and mapping response data to related models",
    "keywords": ["block", "user interface", "ui"],
    "homepage": "https://github.com/sonatra/sonatra-block",
    "license": "MIT",
    "authors": [
        {
            "name": "FranÃ§ois Pluchino",
            "email": "francois.pluchino@sonatra.com"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "symfony/options-resolver": "~3.0",
        "symfony/event-dispatcher": "~3.0",
        "symfony/form": "~3.0"
    },
    "require-dev": {
        "symfony/dependency-injection": "~3.0",
        "symfony/translation": "~3.0",
        "symfony/templating": "~3.0",
        "symfony/http-kernel": "~3.0",
        "symfony/validator": "~3.0",
        "symfony/doctrine-bridge": "~3.0",
        "doctrine/orm": "~2.5",
        "twig/twig": "~1.27"
    },
    "suggest": {
        "doctrine/orm": "For doctrine block type"
    },
    "autoload": {
        "psr-4": { "Sonatra\\Component\\Block\\": "" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
